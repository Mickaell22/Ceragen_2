<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.ClienteController"
      spacing="0"
      styleClass="content-area"
      stylesheets="@../css/styles.css">

    <!-- Header -->
    <HBox styleClass="page-header">
        <Text text="Gestion de Clientes" styleClass="title-xl"/>
    </HBox>

    <!-- TabPane -->
    <TabPane fx:id="tabPane"
             tabClosingPolicy="UNAVAILABLE"
             VBox.vgrow="ALWAYS"
             styleClass="content-area">

        <!-- ================= TAB LISTAR ================= -->
        <Tab text="Listar">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Filtros -->
                <VBox spacing="10" styleClass="card">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <VBox spacing="5">
                            <Text text="Buscar por Cedula"
                                  styleClass="text-neutral-medium"
                                  style="-fx-font-size: 12px;"/>
                            <TextField fx:id="txtBuscarCedula"
                                       promptText="Ingrese cedula..."
                                       prefWidth="180"
                                       style="-fx-pref-height: 35;"/>
                        </VBox>

                        <VBox spacing="5">
                            <Text text="Buscar por Nombre"
                                  styleClass="text-neutral-medium"
                                  style="-fx-font-size: 12px;"/>
                            <TextField fx:id="txtBuscarNombre"
                                       promptText="Ingrese nombre..."
                                       prefWidth="200"
                                       style="-fx-pref-height: 35;"/>
                        </VBox>

                        <VBox spacing="5">
                            <Text text="Buscar por Apellido"
                                  styleClass="text-neutral-medium"
                                  style="-fx-font-size: 12px;"/>
                            <TextField fx:id="txtBuscarApellido"
                                       promptText="Ingrese apellido..."
                                       prefWidth="200"
                                       style="-fx-pref-height: 35;"/>
                        </VBox>
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                        <Button text="Buscar"
                                onAction="#handleBuscar"
                                styleClass="btn, btn-primary"
                                style="-fx-pref-width: 120; -fx-pref-height: 35;"/>
                        <Button text="Limpiar"
                                onAction="#handleLimpiarFiltros"
                                styleClass="btn, btn-secondary"
                                style="-fx-pref-width: 120; -fx-pref-height: 35;"/>
                    </HBox>
                </VBox>

                <!-- Tabla -->
                <StackPane VBox.vgrow="ALWAYS">
                    <TableView fx:id="tableClientes" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="colCedula" text="Cedula" prefWidth="130"/>
                            <TableColumn fx:id="colNombres" text="Nombres" prefWidth="180"/>
                            <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="180"/>
                            <TableColumn fx:id="colTelefono" text="Telefono" prefWidth="130"/>
                            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                            <TableColumn fx:id="colFechaRegistro" text="Fecha Registro" prefWidth="150"/>
                            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="200"/>
                        </columns>
                    </TableView>

                    <!-- Loading -->
                    <VBox fx:id="loadingIndicator"
                          alignment="CENTER"
                          spacing="15"
                          styleClass="loading-overlay"
                          visible="false">
                        <ProgressIndicator prefWidth="60" prefHeight="60"/>
                        <Text text="Cargando datos..." styleClass="title-lg"/>
                    </VBox>
                </StackPane>

                <!-- Paginacion -->
                <HBox spacing="15" alignment="CENTER" styleClass="card">
                    <Button fx:id="btnPrimera" text="Primera" onAction="#handlePrimeraPagina"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>
                    <Button fx:id="btnAnterior" text="Anterior" onAction="#handlePaginaAnterior"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>

                    <Text fx:id="txtPaginacion" text="Pagina 1 de 1" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>

                    <Button fx:id="btnSiguiente" text="Siguiente" onAction="#handlePaginaSiguiente"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>
                    <Button fx:id="btnUltima" text="Ultima" onAction="#handleUltimaPagina"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5" alignment="CENTER_RIGHT">
                        <Text text="Registros por pagina" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                        <ComboBox fx:id="cmbRegistrosPorPagina" prefWidth="80" onAction="#handleCambioRegistrosPorPagina">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="10"/>
                                    <java.lang.String fx:value="25"/>
                                    <java.lang.String fx:value="50"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </HBox>

            </VBox>
        </Tab>

        <!-- ================= TAB CREAR ================= -->
        <Tab text="Crear" fx:id="tabCrear">
            <ScrollPane fitToWidth="true" styleClass="content-area">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="20" styleClass="card-lg" style="-fx-max-width: 700;">
                        <Text text="Crear Nuevo Cliente" styleClass="title-lg"/>

                        <VBox spacing="8">
                            <Text text="Cedula *" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextField fx:id="txtCrearCedula" promptText="Ingrese cedula..."
                                       style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Nombres *" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtCrearNombres" promptText="Ingrese nombres..."
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Apellidos *" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtCrearApellidos" promptText="Ingrese apellidos..."
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Telefono" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtCrearTelefono" promptText="Ingrese telefono..."
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Email" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtCrearEmail" promptText="Ingrese email..."
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="8">
                            <Text text="Direccion" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextArea fx:id="txtCrearDireccion" prefRowCount="3" style="-fx-font-size: 14px;" wrapText="true"/>
                        </VBox>

                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Button text="Crear Cliente"
                                    onAction="#handleCrearCliente"
                                    styleClass="btn, btn-success"
                                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                            <Button text="Limpiar Campos"
                                    onAction="#handleLimpiarFormCrear"
                                    styleClass="btn, btn-secondary"
                                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- ================= TAB EDITAR ================= -->
        <Tab text="Editar" fx:id="tabEditar" disable="true">
            <ScrollPane fitToWidth="true" styleClass="content-area">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="20" styleClass="card-lg" style="-fx-max-width: 700;">
                        <Text text="Editar Cliente" styleClass="title-lg"/>

                        <VBox spacing="8" visible="false" managed="false">
                            <Text text="ID" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextField fx:id="txtEditarId" editable="false" styleClass="disabled-field"
                                       style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Cedula *" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextField fx:id="txtEditarCedula"
                                       style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Nombres *" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtEditarNombres"
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Apellidos *" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtEditarApellidos"
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Telefono" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtEditarTelefono"
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Email" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtEditarEmail"
                                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="8">
                            <Text text="Direccion" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextArea fx:id="txtEditarDireccion" prefRowCount="3" style="-fx-font-size: 14px;" wrapText="true"/>
                        </VBox>

                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Button text="Actualizar Cliente"
                                    onAction="#handleActualizarCliente"
                                    styleClass="btn, btn-warning"
                                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                            <Button text="Cancelar"
                                    onAction="#handleCancelarEdicion"
                                    styleClass="btn, btn-secondary"
                                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

    </TabPane>
</VBox>
