<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.PacientesController"
      spacing="0"
      styleClass="content-area"
      stylesheets="@../css/styles.css">

    <!-- HEADER -->
    <HBox styleClass="page-header">
        <Text text="Gestión de Pacientes" styleClass="title-xl"/>
    </HBox>

    <TabPane fx:id="tabPane"
             tabClosingPolicy="UNAVAILABLE"
             VBox.vgrow="ALWAYS"
             styleClass="content-area">

        <!-- ================= TAB LISTAR ================= -->
        <Tab text="Listar">
            <VBox spacing="15" style="-fx-padding: 20;">

                <HBox spacing="15" styleClass="card">
                    <VBox spacing="5">
                        <Text text="Buscar por Cédula/Nombre" styleClass="text-neutral-medium"/>
                        <TextField fx:id="txtBuscar" promptText="Ingrese cédula o nombre..." prefWidth="300"/>
                    </VBox>

                    <VBox spacing="5">
                        <Text text="Género" styleClass="text-neutral-medium"/>
                        <ComboBox fx:id="cmbGeneroFiltro" prefWidth="150">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="TODOS"/>
                                    <java.lang.String fx:value="M"/>
                                    <java.lang.String fx:value="F"/>
                                    <java.lang.String fx:value="OTRO"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button text="Buscar" onAction="#handleBuscar"
                            styleClass="btn, btn-primary" prefWidth="120"/>
                    <Button text="Limpiar" onAction="#handleLimpiarFiltros"
                            styleClass="btn, btn-secondary" prefWidth="120"/>
                </HBox>

                <StackPane VBox.vgrow="ALWAYS">
                    <TableView fx:id="tablePacientes" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                            <TableColumn fx:id="colCedula" text="Cédula" prefWidth="140"/>
                            <TableColumn fx:id="colNombreCompleto" text="Nombre Completo" prefWidth="240"/>
                            <TableColumn fx:id="colGenero" text="Género" prefWidth="100"/>
                            <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="140"/>
                            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                            <TableColumn fx:id="colFechaRegistro" text="Fecha Registro" prefWidth="180"/>
                            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="240"/>
                        </columns>
                    </TableView>

                    <VBox fx:id="loadingIndicator"
                          alignment="CENTER"
                          spacing="15"
                          styleClass="loading-overlay"
                          visible="false">
                        <ProgressIndicator prefWidth="60"/>
                        <Text text="Cargando datos..." styleClass="title-lg"/>
                    </VBox>
                </StackPane>

                <HBox spacing="15" alignment="CENTER" styleClass="card">
                    <Button fx:id="btnPrimera" text="Primera" onAction="#handlePrimeraPagina" styleClass="btn, btn-primary"/>
                    <Button fx:id="btnAnterior" text="Anterior" onAction="#handlePaginaAnterior" styleClass="btn, btn-primary"/>

                    <Text fx:id="txtPaginacion" text="Página 1 de 1" styleClass="text-primary-dark"/>

                    <Button fx:id="btnSiguiente" text="Siguiente" onAction="#handlePaginaSiguiente" styleClass="btn, btn-primary"/>
                    <Button fx:id="btnUltima" text="Última" onAction="#handleUltimaPagina" styleClass="btn, btn-primary"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5">
                        <Text text="Registros por página" styleClass="text-neutral-medium"/>
                        <ComboBox fx:id="cmbRegistrosPorPagina" prefWidth="80"
                                  onAction="#handleCambioRegistrosPorPagina">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="10"/>
                                    <java.lang.String fx:value="25"/>
                                    <java.lang.String fx:value="50"/>
                                    <java.lang.String fx:value="100"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </HBox>
            </VBox>
        </Tab>

        <!-- ================= TAB CREAR ================= -->
        <Tab text="Crear" fx:id="tabCrear">
            <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="20" styleClass="card-lg">
                        <Text text="Crear Nuevo Paciente" styleClass="title-lg"/>

                        <!-- TODO: contenido intacto -->
                        <!-- (formulario completo sin cambios) -->

                        <!-- Botones visibles siempre -->
                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Button text="Crear Paciente" onAction="#handleCrearPaciente"
                                    styleClass="btn, btn-success" prefWidth="180"/>
                            <Button text="Limpiar Campos" onAction="#handleLimpiarFormCrear"
                                    styleClass="btn, btn-secondary" prefWidth="180"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- ================= TAB EDITAR ================= -->
        <Tab text="Editar" fx:id="tabEditar" disable="true">
            <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="20" styleClass="card-lg">
                        <Text text="Editar Paciente" styleClass="title-lg"/>

                        <!-- formulario intacto -->

                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Button text="Actualizar Paciente" onAction="#handleActualizarPaciente"
                                    styleClass="btn, btn-warning" prefWidth="180"/>
                            <Button text="Cancelar" onAction="#handleCancelarEdicion"
                                    styleClass="btn, btn-secondary" prefWidth="180"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- ================= TAB DOCUMENTOS ================= -->
        <Tab text="Documentos" fx:id="tabDocumentos" disable="true">
            <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
                        <Text text="Documentos del Paciente" styleClass="title-lg"/>

                        <HBox spacing="10">
                            <ComboBox fx:id="cmbTipoDocumento" prefWidth="220"/>
                            <Button text="Subir Documento" onAction="#handleSubirDocumento"
                                    styleClass="btn, btn-primary"/>
                        </HBox>

                        <TableView fx:id="tableDocumentos" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colDocNombre" text="Nombre" prefWidth="420"/>
                                <TableColumn fx:id="colDocTipo" text="Tipo" prefWidth="140"/>
                                <TableColumn fx:id="colDocFecha" text="Fecha Subida" prefWidth="180"/>
                                <TableColumn fx:id="colDocRuta" text="Ruta" prefWidth="480"/>
                                <TableColumn fx:id="colDocAcciones" text="Acciones" prefWidth="140"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

    </TabPane>
</VBox>
