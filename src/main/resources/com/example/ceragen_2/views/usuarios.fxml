<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.UsuariosController"
      spacing="0" styleClass="content-area"
      stylesheets="@../css/styles.css">

    <!-- Header -->
    <HBox styleClass="page-header">
        <Text text="Gestión de Usuarios" styleClass="title-xl"/>
    </HBox>

    <!-- TabPane -->
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="content-area">

        <!-- Tab Listar -->
        <Tab text="Listar">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Filtros -->
                <HBox spacing="15" styleClass="card">
                    <VBox spacing="5">
                        <Text text="Buscar por Username" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                        <TextField fx:id="txtBuscar" promptText="Ingrese username..." prefWidth="250"/>
                    </VBox>

                    <VBox spacing="5">
                        <Text text="Filtrar por Rol" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                        <ComboBox fx:id="cmbRolFiltro" prefWidth="150">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="TODOS"/>
                                    <java.lang.String fx:value="ADMIN"/>
                                    <java.lang.String fx:value="RECEPCIONISTA"/>
                                    <java.lang.String fx:value="MEDICO"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <VBox spacing="5">
                        <Text text="Estado" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                        <ComboBox fx:id="cmbActivoFiltro" prefWidth="150">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="TODOS"/>
                                    <java.lang.String fx:value="ACTIVO"/>
                                    <java.lang.String fx:value="INACTIVO"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5" alignment="BOTTOM_RIGHT">
                        <Text text=" " style="-fx-font-size: 12px;"/>
                        <Button text="Buscar" onAction="#handleBuscar"
                                styleClass="btn, btn-primary"
                                style="-fx-pref-width: 120; -fx-pref-height: 35;"/>
                    </VBox>

                    <VBox spacing="5" alignment="BOTTOM_RIGHT">
                        <Text text=" " style="-fx-font-size: 12px;"/>
                        <Button text="Limpiar" onAction="#handleLimpiarFiltros"
                                styleClass="btn, btn-secondary"
                                style="-fx-pref-width: 120; -fx-pref-height: 35;"/>
                    </VBox>
                </HBox>

                <!-- Tabla de Usuarios con indicador de carga -->
                <StackPane VBox.vgrow="ALWAYS">
                    <TableView fx:id="tableUsuarios" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="colUsername" text="Username" prefWidth="200"/>
                            <TableColumn fx:id="colRol" text="Rol" prefWidth="150"/>
                            <TableColumn fx:id="colActivo" text="Estado" prefWidth="120"/>
                            <TableColumn fx:id="colFechaCreacion" text="Fecha Creación" prefWidth="180"/>
                            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="350"/>
                        </columns>
                    </TableView>

                    <!-- Indicador de carga -->
                    <VBox fx:id="loadingIndicator" alignment="CENTER" spacing="15"
                          styleClass="loading-overlay" visible="false">
                        <ProgressIndicator prefWidth="60" prefHeight="60"/>
                        <Text text="Cargando datos..." styleClass="title-lg"/>
                    </VBox>
                </StackPane>

                <!-- Paginación -->
                <HBox spacing="15" alignment="CENTER" styleClass="card">
                    <Button fx:id="btnPrimera" text="Primera" onAction="#handlePrimeraPagina"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>
                    <Button fx:id="btnAnterior" text="Anterior" onAction="#handlePaginaAnterior"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>

                    <Text fx:id="txtPaginacion" text="Página 1 de 1" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>

                    <Button fx:id="btnSiguiente" text="Siguiente" onAction="#handlePaginaSiguiente"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>
                    <Button fx:id="btnUltima" text="Última" onAction="#handleUltimaPagina"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5" alignment="CENTER_RIGHT">
                        <Text text="Registros por página" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                        <ComboBox fx:id="cmbRegistrosPorPagina" prefWidth="80" onAction="#handleCambioRegistrosPorPagina">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="10"/>
                                    <java.lang.String fx:value="25"/>
                                    <java.lang.String fx:value="50"/>
                                    <java.lang.String fx:value="100"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </HBox>

            </VBox>
        </Tab>

        <!-- Tab Crear -->
        <Tab text="Crear" fx:id="tabCrear">
            <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                <VBox spacing="20" styleClass="card-lg">
                    <Text text="Crear Nuevo Usuario" styleClass="title-lg"/>

                    <VBox spacing="8">
                        <Text text="Username" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtCrearUsername" promptText="Ingrese username..."
                                   style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Text text="Contraseña" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <PasswordField fx:id="txtCrearPassword" promptText="Ingrese contraseña..."
                                       style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Text text="Confirmar Contraseña" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <PasswordField fx:id="txtCrearPasswordConfirm" promptText="Confirme la contraseña..."
                                       style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Text text="Rol" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <ComboBox fx:id="cmbCrearRol" prefWidth="540"
                                  style="-fx-pref-height: 40; -fx-font-size: 14px;">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="ADMIN"/>
                                    <java.lang.String fx:value="RECEPCIONISTA"/>
                                    <java.lang.String fx:value="MEDICO"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                        <Button text="Crear Usuario" onAction="#handleCrearUsuario"
                                styleClass="btn, btn-success"
                                style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                        <Button text="Limpiar Campos" onAction="#handleLimpiarFormCrear"
                                styleClass="btn, btn-secondary"
                                style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                    </HBox>
                </VBox>
            </VBox>
        </Tab>

        <!-- Tab Editar -->
        <Tab text="Editar" fx:id="tabEditar" disable="true">
            <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                <VBox spacing="20" styleClass="card-lg">
                    <Text text="Editar Usuario" styleClass="title-lg"/>

                    <VBox spacing="8" visible="false" managed="false">
                        <Text text="ID" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtEditarId" editable="false" styleClass="disabled-field"
                                   style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Text text="Username" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtEditarUsername" promptText="Ingrese username..."
                                   style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Text text="Rol" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <ComboBox fx:id="cmbEditarRol" prefWidth="540"
                                  style="-fx-pref-height: 40; -fx-font-size: 14px;">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="ADMIN"/>
                                    <java.lang.String fx:value="RECEPCIONISTA"/>
                                    <java.lang.String fx:value="MEDICO"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <VBox spacing="8">
                        <Text text="Estado" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                        <ComboBox fx:id="cmbEditarActivo" prefWidth="540"
                                  style="-fx-pref-height: 40; -fx-font-size: 14px;">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="ACTIVO"/>
                                    <java.lang.String fx:value="INACTIVO"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                        <Button text="Actualizar Usuario" onAction="#handleActualizarUsuario"
                                styleClass="btn, btn-warning"
                                style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                        <Button text="Cancelar" onAction="#handleCancelarEdicion"
                                styleClass="btn, btn-secondary"
                                style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                    </HBox>
                </VBox>
            </VBox>
        </Tab>

    </TabPane>

</VBox>
