<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ceragen_2.controller.MainController"
            prefHeight="768.0" prefWidth="1366.0"
            stylesheets="@../css/styles.css">

    <!-- Navbar Izquierdo -->
    <left>
        <VBox spacing="5.0" styleClass="navbar">
            <padding>
                <Insets top="20.0" bottom="20.0"/>
            </padding>

            <!-- Header del Navbar -->
            <VBox alignment="CENTER" spacing="5.0" style="-fx-padding: 0 0 20 0;">
                <Text text="Ceragen" styleClass="title-xl, text-white"/>
                <Text fx:id="userLabel" styleClass="subtitle, text-white" style="-fx-fill: #bdc3c7;"/>
                <Separator styleClass="separator-dark">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Separator>
            </VBox>

            <!-- Botones de Navegación -->
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                <Button fx:id="btnUsuarios" text="Usuarios" onAction="#navigateToUsuarios"
                        styleClass="nav-button"/>

                <Button fx:id="btnPacientes" text="Pacientes" onAction="#navigateToPacientes"
                        styleClass="nav-button"/>

                <Button fx:id="btnProfesionales" text="Profesionales" onAction="#navigateToProfesionales"
                        styleClass="nav-button"/>

                <Button fx:id="btnEspecialidades" text="Especialidades" onAction="#navigateToEspecialidades"
                        styleClass="nav-button"/>

                <Button fx:id="btnCitas" text="Citas" onAction="#navigateToCitas"
                        styleClass="nav-button"/>

                <Button fx:id="btnFacturacion" text="Facturación" onAction="#navigateToFacturacion"
                        styleClass="nav-button"/>
            </VBox>

            <!-- Botón de Cerrar Sesión -->
            <Button fx:id="btnLogout" text="Cerrar Sesión" onAction="#handleLogout"
                    styleClass="btn, btn-danger"
                    style="-fx-pref-width: 210; -fx-pref-height: 40;">
                <VBox.margin>
                    <Insets left="20.0" right="20.0" top="20.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </left>

    <!-- Área de Contenido -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <VBox alignment="CENTER" spacing="20.0">
                <Text text="Bienvenido a Ceragen" styleClass="title-xxl"/>
                <Text text="Seleccione un módulo del menú lateral" styleClass="subtitle" style="-fx-font-size: 16px;"/>

                <!-- Botón de condicionales -->
                <Button fx:id="btnNoTocar" text="NO TOCAR" onAction="#handleNoTocar"
                        style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-pref-width: 150; -fx-pref-height: 50; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-border-color: #8B0000; -fx-border-width: 3; -fx-border-radius: 10;">
                    <VBox.margin>
                        <Insets top="30.0"/>
                    </VBox.margin>
                </Button>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
