<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.CrearCitaController"
      spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;"
      stylesheets="@../css/styles.css">

    <VBox styleClass="card-lg" style="-fx-max-width: 700;">
        <Text text="Crear Nueva Cita" styleClass="title-lg"/>

        <VBox spacing="8">
            <Text text="Paciente (buscar por cedula)" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
            <HBox spacing="10">
                <TextField fx:id="txtCrearCedulaPaciente" promptText="Ingrese cedula..." prefWidth="150" style="-fx-pref-height: 40; -fx-font-size: 13px;"/>
                <Button text="Buscar" onAction="#handleBuscarPaciente"
                        styleClass="btn, btn-secondary"
                        style="-fx-pref-width: 80; -fx-pref-height: 40;"/>
                <Label fx:id="lblCrearPaciente" text="Sin seleccionar" styleClass="text-primary-dark"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 3; -fx-pref-width: 380; -fx-pref-height: 40;"/>
            </HBox>
        </VBox>

        <VBox spacing="8">
            <Text text="Profesional (buscar por cedula)" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
            <HBox spacing="10">
                <TextField fx:id="txtCrearCedulaProfesional" promptText="Ingrese cedula..." prefWidth="150" style="-fx-pref-height: 40; -fx-font-size: 13px;"/>
                <Button text="Buscar" onAction="#handleBuscarProfesional"
                        styleClass="btn, btn-secondary"
                        style="-fx-pref-width: 80; -fx-pref-height: 40;"/>
                <Label fx:id="lblCrearProfesional" text="Sin seleccionar" styleClass="text-primary-dark"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 3; -fx-pref-width: 380; -fx-pref-height: 40;"/>
            </HBox>
        </VBox>

        <HBox spacing="15">
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Text text="Fecha" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                <DatePicker fx:id="dpCrearFecha" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
            </VBox>

            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Text text="Hora" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                <ComboBox fx:id="cmbCrearHora" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;" promptText="Seleccione hora...">
                    <items>
                        <javafx.collections.FXCollections fx:factory="observableArrayList">
                            <java.lang.String fx:value="08:00"/>
                            <java.lang.String fx:value="08:30"/>
                            <java.lang.String fx:value="09:00"/>
                            <java.lang.String fx:value="09:30"/>
                            <java.lang.String fx:value="10:00"/>
                            <java.lang.String fx:value="10:30"/>
                            <java.lang.String fx:value="11:00"/>
                            <java.lang.String fx:value="11:30"/>
                            <java.lang.String fx:value="12:00"/>
                            <java.lang.String fx:value="12:30"/>
                            <java.lang.String fx:value="13:00"/>
                            <java.lang.String fx:value="13:30"/>
                            <java.lang.String fx:value="14:00"/>
                            <java.lang.String fx:value="14:30"/>
                            <java.lang.String fx:value="15:00"/>
                            <java.lang.String fx:value="15:30"/>
                            <java.lang.String fx:value="16:00"/>
                            <java.lang.String fx:value="16:30"/>
                            <java.lang.String fx:value="17:00"/>
                        </javafx.collections.FXCollections>
                    </items>
                </ComboBox>
            </VBox>
        </HBox>

        <VBox spacing="8">
            <Text text="Motivo de Consulta" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
            <TextArea fx:id="txtCrearMotivo" promptText="Ingrese el motivo de la consulta..." prefRowCount="4"
                      style="-fx-font-size: 14px;" wrapText="true"/>
        </VBox>

        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button text="Crear Cita" onAction="#handleCrearCita"
                    styleClass="btn, btn-success"
                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
            <Button text="Limpiar Campos" onAction="#handleLimpiar"
                    styleClass="btn, btn-secondary"
                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
        </HBox>
    </VBox>
</VBox>
