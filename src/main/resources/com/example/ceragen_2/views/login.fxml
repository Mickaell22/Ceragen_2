<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.LoginController"
      stylesheets="@../css/styles.css"
      styleClass="login-wrapper">

    <!-- Panel Izquierdo - Branding -->
    <VBox alignment="CENTER" spacing="20.0" styleClass="login-brand-panel" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="15.0">
            <!-- Logo Icon -->
            <StackPane styleClass="login-logo-container">
                <Circle radius="50" styleClass="login-logo-circle"/>
                <FontIcon iconLiteral="fas-heartbeat" iconSize="48" styleClass="login-logo-icon"/>
            </StackPane>

            <Text text="CERAGEN" styleClass="login-brand-title"/>
            <Text text="Sistema de Gestion Medica" styleClass="login-brand-subtitle"/>

            <VBox alignment="CENTER" spacing="8.0" style="-fx-padding: 30 0 0 0;">
                <HBox alignment="CENTER" spacing="10.0">
                    <FontIcon iconLiteral="fas-check-circle" iconSize="16" styleClass="login-feature-icon"/>
                    <Text text="Gestion integral de pacientes" styleClass="login-feature-text"/>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <FontIcon iconLiteral="fas-check-circle" iconSize="16" styleClass="login-feature-icon"/>
                    <Text text="Control de citas y agendas" styleClass="login-feature-text"/>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <FontIcon iconLiteral="fas-check-circle" iconSize="16" styleClass="login-feature-icon"/>
                    <Text text="Facturacion automatizada" styleClass="login-feature-text"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>

    <!-- Panel Derecho - Formulario -->
    <VBox alignment="CENTER" styleClass="login-form-panel" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="8.0" styleClass="login-card">
            <!-- Header del formulario -->
            <VBox alignment="CENTER" spacing="5.0" style="-fx-padding: 0 0 20 0;">
                <Text text="Bienvenido" styleClass="login-form-title"/>
                <Text text="Ingresa tus credenciales para continuar" styleClass="login-form-subtitle"/>
            </VBox>

            <!-- Campo Usuario -->
            <VBox spacing="8.0" styleClass="login-field-group">
                <Label text="Usuario" styleClass="login-field-label"/>
                <HBox styleClass="login-input-container">
                    <FontIcon iconLiteral="fas-user" iconSize="16" styleClass="login-input-icon"/>
                    <TextField fx:id="usernameField" promptText="Ingrese su usuario" styleClass="login-input"/>
                </HBox>
            </VBox>

            <!-- Campo Contrasena -->
            <VBox spacing="8.0" styleClass="login-field-group">
                <Label text="Contrasena" styleClass="login-field-label"/>
                <HBox styleClass="login-input-container">
                    <FontIcon iconLiteral="fas-lock" iconSize="16" styleClass="login-input-icon"/>
                    <PasswordField fx:id="passwordField" promptText="Ingrese su contrasena" styleClass="login-input"/>
                </HBox>
            </VBox>

            <!-- Mensaje de Error -->
            <Label fx:id="errorLabel" styleClass="login-error-label" visible="false"/>

            <!-- Boton Login -->
            <Button fx:id="loginButton" text="Iniciar Sesion" onAction="#handleLogin" styleClass="login-submit-btn">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-in-alt" iconSize="16" style="-fx-icon-color: white;"/>
                </graphic>
            </Button>

            <!-- Separador -->
            <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 15 0 10 0;">
                <Separator HBox.hgrow="ALWAYS" style="-fx-pref-width: 80;"/>
                <Text text="Credenciales de prueba" styleClass="login-separator-text"/>
                <Separator HBox.hgrow="ALWAYS" style="-fx-pref-width: 80;"/>
            </HBox>

            <!-- Credenciales de Prueba -->
            <VBox spacing="10.0" styleClass="login-credentials-box">
                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="login-credential-row">
                    <HBox alignment="CENTER" styleClass="login-credential-badge admin-badge">
                        <Text text="ADMIN" styleClass="login-credential-badge-text"/>
                    </HBox>
                    <VBox spacing="2.0">
                        <Text text="admin / admin123" styleClass="login-credential-value"/>
                        <Text text="Acceso completo al sistema" styleClass="login-credential-desc"/>
                    </VBox>
                </HBox>

                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="login-credential-row">
                    <HBox alignment="CENTER" styleClass="login-credential-badge recep-badge">
                        <Text text="RECEP" styleClass="login-credential-badge-text"/>
                    </HBox>
                    <VBox spacing="2.0">
                        <Text text="recepcion1 / admin123" styleClass="login-credential-value"/>
                        <Text text="Gestion de citas y pacientes" styleClass="login-credential-desc"/>
                    </VBox>
                </HBox>

                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="login-credential-row">
                    <HBox alignment="CENTER" styleClass="login-credential-badge medic-badge">
                        <Text text="MEDIC" styleClass="login-credential-badge-text"/>
                    </HBox>
                    <VBox spacing="2.0">
                        <Text text="dr_mendoza / admin123" styleClass="login-credential-value"/>
                        <Text text="Consulta de pacientes y citas" styleClass="login-credential-desc"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</HBox>
