<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.LoginController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
        <effect>
            <javafx.scene.effect.DropShadow radius="10" offsetY="2" color="#00000033"/>
        </effect>

        <Text text="Ceragen" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
        <Text text="Sistema de Gestión Médica" style="-fx-font-size: 14px; -fx-fill: #7f8c8d;"/>

        <VBox spacing="5.0" style="-fx-padding: 20 0 0 0;">
            <Label text="Usuario" style="-fx-font-size: 12px; -fx-text-fill: #34495e;"/>
            <TextField fx:id="usernameField" promptText="Ingrese su usuario"
                       style="-fx-pref-width: 280; -fx-pref-height: 35;"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="Contraseña" style="-fx-font-size: 12px; -fx-text-fill: #34495e;"/>
            <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña"
                          style="-fx-pref-width: 280; -fx-pref-height: 35;"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 12px;" visible="false"/>

        <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#handleLogin"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 280; -fx-pref-height: 40; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                styleClass="login-button">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
