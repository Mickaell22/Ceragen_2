<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.LoginController"
      styleClass="login-container"
      stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="10.0" styleClass="login-card, shadow">
        <Text text="Ceragen" styleClass="title-xxl"/>
        <Text text="Sistema de Gestión Médica" styleClass="subtitle"/>

        <VBox spacing="5.0" style="-fx-padding: 20 0 0 0;">
            <Label text="Usuario" styleClass="text-neutral-dark-control" style="-fx-font-size: 12px;"/>
            <TextField fx:id="usernameField" promptText="Ingrese su usuario"
                       style="-fx-pref-width: 280; -fx-pref-height: 35;"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="Contraseña" styleClass="text-neutral-dark-control" style="-fx-font-size: 12px;"/>
            <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña"
                          style="-fx-pref-width: 280; -fx-pref-height: 35;"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 12px;" visible="false"/>

        <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#handleLogin"
                styleClass="login-button">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>

        <VBox spacing="8.0" style="-fx-padding: 15 0 0 0; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Label text="Credenciales de Prueba:" styleClass="text-neutral-dark-control"
                   style="-fx-font-size: 11px; -fx-font-weight: bold;"/>

            <HBox spacing="10.0">
                <VBox spacing="2.0">
                    <Label text="Admin:" style="-fx-font-size: 10px; -fx-text-fill: #666;"/>
                    <Label text="Recepcion:" style="-fx-font-size: 10px; -fx-text-fill: #666;"/>
                    <Label text="Medico:" style="-fx-font-size: 10px; -fx-text-fill: #666;"/>
                </VBox>
                <VBox spacing="2.0">
                    <Label text="admin / admin123" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                    <Label text="recepcion1 / admin123" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    <Label text="dr_mendoza / admin123" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</VBox>
