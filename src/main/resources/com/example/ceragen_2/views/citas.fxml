<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.CitasController"
      spacing="0" style="-fx-background-color: #ecf0f1;">

    <!-- Header -->
    <HBox style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 1 0;">
        <Text text="Gestión de Citas" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
    </HBox>

    <!-- TabPane -->
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" style="-fx-background-color: #ecf0f1;">

        <!-- Tab Listar -->
        <Tab text="Listar">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Filtros -->
                <HBox spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                    <VBox spacing="5">
                        <Text text="Paciente" style="-fx-font-size: 12px; -fx-fill: #7f8c8d;"/>
                        <ComboBox fx:id="cmbPacienteFiltro" prefWidth="200"/>
                    </VBox>

                    <VBox spacing="5">
                        <Text text="Profesional" style="-fx-font-size: 12px; -fx-fill: #7f8c8d;"/>
                        <ComboBox fx:id="cmbProfesionalFiltro" prefWidth="200"/>
                    </VBox>

                    <VBox spacing="5">
                        <Text text="Estado" style="-fx-font-size: 12px; -fx-fill: #7f8c8d;"/>
                        <ComboBox fx:id="cmbEstadoFiltro" prefWidth="150">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="TODOS"/>
                                    <java.lang.String fx:value="PENDIENTE"/>
                                    <java.lang.String fx:value="CONFIRMADA"/>
                                    <java.lang.String fx:value="ATENDIDA"/>
                                    <java.lang.String fx:value="CANCELADA"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5" alignment="BOTTOM_RIGHT">
                        <Text text=" " style="-fx-font-size: 12px;"/>
                        <Button text="Buscar" onAction="#handleBuscar"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5" alignment="BOTTOM_RIGHT">
                        <Text text=" " style="-fx-font-size: 12px;"/>
                        <Button text="Limpiar" onAction="#handleLimpiarFiltros"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    </VBox>
                </HBox>

                <!-- Tabla de Citas con indicador de carga -->
                <StackPane VBox.vgrow="ALWAYS">
                    <TableView fx:id="tableCitas" style="-fx-background-color: white; -fx-background-radius: 5;">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200"/>
                            <TableColumn fx:id="colProfesional" text="Profesional" prefWidth="200"/>
                            <TableColumn fx:id="colFechaHora" text="Fecha/Hora" prefWidth="150"/>
                            <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                            <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="200"/>
                            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="380"/>
                        </columns>
                    </TableView>

                    <!-- Indicador de carga -->
                    <VBox fx:id="loadingIndicator" alignment="CENTER" spacing="15"
                          style="-fx-background-color: rgba(255, 255, 255, 0.9);" visible="false">
                        <ProgressIndicator prefWidth="60" prefHeight="60"/>
                        <Text text="Cargando datos..." style="-fx-font-size: 16px; -fx-fill: #2c3e50; -fx-font-weight: bold;"/>
                    </VBox>
                </StackPane>

                <!-- Paginación -->
                <HBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                    <Button fx:id="btnPrimera" text="Primera" onAction="#handlePrimeraPagina"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 100; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    <Button fx:id="btnAnterior" text="Anterior" onAction="#handlePaginaAnterior"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 100; -fx-cursor: hand; -fx-background-radius: 5;"/>

                    <Text fx:id="txtPaginacion" text="Página 1 de 1" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>

                    <Button fx:id="btnSiguiente" text="Siguiente" onAction="#handlePaginaSiguiente"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 100; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    <Button fx:id="btnUltima" text="Última" onAction="#handleUltimaPagina"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 100; -fx-cursor: hand; -fx-background-radius: 5;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5" alignment="CENTER_RIGHT">
                        <Text text="Registros por página" style="-fx-font-size: 12px; -fx-fill: #7f8c8d;"/>
                        <ComboBox fx:id="cmbRegistrosPorPagina" prefWidth="80" onAction="#handleCambioRegistrosPorPagina">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="10"/>
                                    <java.lang.String fx:value="25"/>
                                    <java.lang.String fx:value="50"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </HBox>

            </VBox>
        </Tab>

        <!-- Tab Crear -->
        <Tab text="Crear" fx:id="tabCrear">
            <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-max-width: 700;">
                        <Text text="Crear Nueva Cita" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

                        <VBox spacing="8">
                            <Text text="Paciente" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <ComboBox fx:id="cmbCrearPaciente" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Profesional" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <ComboBox fx:id="cmbCrearProfesional" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Fecha" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                                <DatePicker fx:id="dpCrearFecha" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Hora (HH:mm)" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                                <TextField fx:id="txtCrearHora" promptText="Ej: 14:30" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="8">
                            <Text text="Motivo de Consulta" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <TextArea fx:id="txtCrearMotivo" promptText="Ingrese el motivo de la consulta..." prefRowCount="4"
                                     style="-fx-font-size: 14px;" wrapText="true"/>
                        </VBox>

                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Button text="Crear Cita" onAction="#handleCrearCita"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 180; -fx-pref-height: 45; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                            <Button text="Limpiar Campos" onAction="#handleLimpiarFormCrear"
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 180; -fx-pref-height: 45; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- Tab Editar -->
        <Tab text="Editar" fx:id="tabEditar" disable="true">
            <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-max-width: 700;">
                        <Text text="Editar Cita" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

                        <VBox spacing="8">
                            <Text text="ID" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <TextField fx:id="txtEditarId" editable="false" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-color: #ecf0f1;"/>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Paciente" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <ComboBox fx:id="cmbEditarPaciente" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Profesional" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <ComboBox fx:id="cmbEditarProfesional" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Fecha" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                                <DatePicker fx:id="dpEditarFecha" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Hora (HH:mm)" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                                <TextField fx:id="txtEditarHora" promptText="Ej: 14:30" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="8">
                            <Text text="Motivo de Consulta" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <TextArea fx:id="txtEditarMotivo" prefRowCount="3" style="-fx-font-size: 14px;" wrapText="true"/>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Estado" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <ComboBox fx:id="cmbEditarEstado" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;">
                                <items>
                                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                                        <java.lang.String fx:value="PENDIENTE"/>
                                        <java.lang.String fx:value="CONFIRMADA"/>
                                        <java.lang.String fx:value="ATENDIDA"/>
                                        <java.lang.String fx:value="CANCELADA"/>
                                    </javafx.collections.FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Observaciones" style="-fx-font-size: 14px; -fx-fill: #2c3e50;"/>
                            <TextArea fx:id="txtEditarObservaciones" prefRowCount="3" style="-fx-font-size: 14px;" wrapText="true"/>
                        </VBox>

                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Button text="Actualizar Cita" onAction="#handleActualizarCita"
                                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-pref-width: 180; -fx-pref-height: 45; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                            <Button text="Cancelar" onAction="#handleCancelarEdicion"
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 180; -fx-pref-height: 45; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

    </TabPane>

</VBox>
