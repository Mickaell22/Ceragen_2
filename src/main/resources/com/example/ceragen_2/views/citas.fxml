<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ceragen_2.controller.CitasController"
      spacing="0" styleClass="content-area"
      stylesheets="@../css/styles.css">

    <!-- Header -->
    <HBox styleClass="page-header">
        <Text text="Gestión de Citas" styleClass="title-xl"/>
    </HBox>

    <!-- TabPane -->
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="content-area">

        <!-- Tab Listar -->
        <Tab text="Listar">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Filtros -->
                <VBox spacing="10" styleClass="card">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <VBox spacing="5">
                            <Text text="Paciente" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                            <ComboBox fx:id="cmbPacienteFiltro" prefWidth="200" style="-fx-pref-height: 35;"/>
                        </VBox>

                        <VBox spacing="5" alignment="BOTTOM_LEFT">
                            <Text text="O buscar por cédula" styleClass="text-neutral-medium" style="-fx-font-size: 11px;"/>
                            <HBox spacing="5">
                                <TextField fx:id="txtFiltroCedulaPaciente" promptText="Cédula..." prefWidth="120" style="-fx-pref-height: 35;"/>
                                <Button text="Buscar" onAction="#handleBuscarPacienteFiltro"
                                        styleClass="btn, btn-secondary"
                                        style="-fx-pref-width: 80; -fx-pref-height: 35;"/>
                            </HBox>
                        </VBox>

                        <VBox spacing="5">
                            <Text text="Profesional" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                            <ComboBox fx:id="cmbProfesionalFiltro" prefWidth="200" style="-fx-pref-height: 35;"/>
                        </VBox>

                        <VBox spacing="5" alignment="BOTTOM_LEFT">
                            <Text text="O buscar por cédula" styleClass="text-neutral-medium" style="-fx-font-size: 11px;"/>
                            <HBox spacing="5">
                                <TextField fx:id="txtFiltroCedulaProfesional" promptText="Cédula..." prefWidth="120" style="-fx-pref-height: 35;"/>
                                <Button text="Buscar" onAction="#handleBuscarProfesionalFiltro"
                                        styleClass="btn, btn-secondary"
                                        style="-fx-pref-width: 80; -fx-pref-height: 35;"/>
                            </HBox>
                        </VBox>

                        <VBox spacing="5">
                            <Text text="Estado" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                            <ComboBox fx:id="cmbEstadoFiltro" prefWidth="120" style="-fx-pref-height: 35;">
                                <items>
                                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                                        <java.lang.String fx:value="TODOS"/>
                                        <java.lang.String fx:value="PENDIENTE"/>
                                        <java.lang.String fx:value="CONFIRMADA"/>
                                        <java.lang.String fx:value="ATENDIDA"/>
                                        <java.lang.String fx:value="CANCELADA"/>
                                    </javafx.collections.FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                        <Button text="Buscar" onAction="#handleBuscar"
                                styleClass="btn, btn-primary"
                                style="-fx-pref-width: 120; -fx-pref-height: 35;"/>
                        <Button text="Limpiar" onAction="#handleLimpiarFiltros"
                                styleClass="btn, btn-secondary"
                                style="-fx-pref-width: 120; -fx-pref-height: 35;"/>
                    </HBox>
                </VBox>

                <!-- Tabla de Citas con indicador de carga -->
                <StackPane VBox.vgrow="ALWAYS">
                    <TableView fx:id="tableCitas" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200"/>
                            <TableColumn fx:id="colProfesional" text="Profesional" prefWidth="200"/>
                            <TableColumn fx:id="colFechaHora" text="Fecha/Hora" prefWidth="150"/>
                            <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                            <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="200"/>
                            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="380"/>
                        </columns>
                    </TableView>

                    <!-- Indicador de carga -->
                    <VBox fx:id="loadingIndicator" alignment="CENTER" spacing="15"
                          styleClass="loading-overlay" visible="false">
                        <ProgressIndicator prefWidth="60" prefHeight="60"/>
                        <Text text="Cargando datos..." styleClass="title-lg"/>
                    </VBox>
                </StackPane>

                <!-- Paginación -->
                <HBox spacing="15" alignment="CENTER" styleClass="card">
                    <Button fx:id="btnPrimera" text="Primera" onAction="#handlePrimeraPagina"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>
                    <Button fx:id="btnAnterior" text="Anterior" onAction="#handlePaginaAnterior"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>

                    <Text fx:id="txtPaginacion" text="Página 1 de 1" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>

                    <Button fx:id="btnSiguiente" text="Siguiente" onAction="#handlePaginaSiguiente"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>
                    <Button fx:id="btnUltima" text="Última" onAction="#handleUltimaPagina"
                            styleClass="btn, btn-primary" style="-fx-pref-width: 100;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5" alignment="CENTER_RIGHT">
                        <Text text="Registros por página" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                        <ComboBox fx:id="cmbRegistrosPorPagina" prefWidth="80" onAction="#handleCambioRegistrosPorPagina">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <java.lang.String fx:value="10"/>
                                    <java.lang.String fx:value="25"/>
                                    <java.lang.String fx:value="50"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </HBox>

            </VBox>
        </Tab>

        <!-- Tab Vista Horario -->
        <Tab text="Vista Horario">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Controles de navegación de fecha -->
                <HBox spacing="15" styleClass="card" alignment="CENTER">
                    <Button text="&lt;&lt; Semana Anterior" onAction="#handleSemanaAnterior"
                            styleClass="btn, btn-primary"
                            style="-fx-pref-width: 160; -fx-pref-height: 35;"/>

                    <DatePicker fx:id="dpFechaHorario" prefWidth="150" style="-fx-pref-height: 35;"/>

                    <Button text="Hoy" onAction="#handleIrHoy"
                            styleClass="btn, btn-secondary"
                            style="-fx-pref-width: 100; -fx-pref-height: 35;"/>

                    <Button text="Semana Siguiente &gt;&gt;" onAction="#handleSemanaSiguiente"
                            styleClass="btn, btn-primary"
                            style="-fx-pref-width: 160; -fx-pref-height: 35;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <VBox spacing="5">
                        <Text text="Filtrar por Profesional" styleClass="text-neutral-medium" style="-fx-font-size: 12px;"/>
                        <HBox spacing="5">
                            <TextField fx:id="txtHorarioCedulaProfesional" promptText="Cedula..." prefWidth="120" style="-fx-pref-height: 35;"/>
                            <Label fx:id="lblHorarioProfesional" text="Todos" styleClass="text-primary-dark"
                                   style="-fx-font-size: 11px; -fx-padding: 8; -fx-background-color: #ecf0f1; -fx-background-radius: 3; -fx-pref-width: 120;"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="5" alignment="BOTTOM_RIGHT">
                        <Text text=" " style="-fx-font-size: 12px;"/>
                        <Button text="Actualizar" onAction="#handleActualizarHorario"
                                styleClass="btn, btn-success"
                                style="-fx-pref-width: 100; -fx-pref-height: 35;"/>
                    </VBox>
                </HBox>

                <!-- Grid de horarios -->
                <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                    <VBox fx:id="vboxHorario" spacing="0" style="-fx-padding: 10;">
                        <!-- El contenido del horario se generará dinámicamente -->
                        <Text text="Cargando horario..." styleClass="text-neutral-medium" style="-fx-font-size: 14px; -fx-padding: 20;"/>
                    </VBox>
                </ScrollPane>

                <!-- Leyenda de estados -->
                <HBox spacing="20" styleClass="card" alignment="CENTER">
                    <Text text="Leyenda:" styleClass="text-primary-dark" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="  " style="-fx-background-color: #3498db; -fx-background-radius: 3; -fx-pref-width: 20; -fx-pref-height: 20;"/>
                        <Text text="Pendiente" style="-fx-font-size: 12px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="  " style="-fx-background-color: #27ae60; -fx-background-radius: 3; -fx-pref-width: 20; -fx-pref-height: 20;"/>
                        <Text text="Confirmada" style="-fx-font-size: 12px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="  " style="-fx-background-color: #9b59b6; -fx-background-radius: 3; -fx-pref-width: 20; -fx-pref-height: 20;"/>
                        <Text text="Atendida" style="-fx-font-size: 12px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="  " style="-fx-background-color: #95a5a6; -fx-background-radius: 3; -fx-pref-width: 20; -fx-pref-height: 20;"/>
                        <Text text="Cancelada" style="-fx-font-size: 12px;"/>
                    </HBox>
                </HBox>

            </VBox>
        </Tab>

        <!-- Tab Editar -->
        <Tab text="Editar" fx:id="tabEditar" disable="true">
            <ScrollPane fitToWidth="true" styleClass="content-area">
                <VBox spacing="20" style="-fx-padding: 30; -fx-alignment: TOP_CENTER;">
                    <VBox spacing="20" styleClass="card-lg" style="-fx-max-width: 700;">
                        <Text text="Editar Cita" styleClass="title-lg"/>

                        <VBox spacing="8" visible="false" managed="false">
                            <Text text="ID" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextField fx:id="txtEditarId" editable="false" styleClass="disabled-field"
                                       style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Paciente" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <ComboBox fx:id="cmbEditarPaciente" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            <HBox spacing="10" style="-fx-padding: 5 0 0 0;">
                                <Text text="O buscar por cédula:" styleClass="text-neutral-medium" style="-fx-font-size: 12px; -fx-padding: 8 0 0 0;"/>
                                <TextField fx:id="txtEditarCedulaPaciente" promptText="Ingrese cédula..." prefWidth="150" style="-fx-pref-height: 35; -fx-font-size: 13px;"/>
                                <Button text="Buscar" onAction="#handleBuscarPacienteEditar"
                                        styleClass="btn, btn-secondary"
                                        style="-fx-pref-width: 80; -fx-pref-height: 35;"/>
                            </HBox>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Profesional" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <ComboBox fx:id="cmbEditarProfesional" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            <HBox spacing="10" style="-fx-padding: 5 0 0 0;">
                                <Text text="O buscar por cédula:" styleClass="text-neutral-medium" style="-fx-font-size: 12px; -fx-padding: 8 0 0 0;"/>
                                <TextField fx:id="txtEditarCedulaProfesional" promptText="Ingrese cédula..." prefWidth="150" style="-fx-pref-height: 35; -fx-font-size: 13px;"/>
                                <Button text="Buscar" onAction="#handleBuscarProfesionalEditar"
                                        styleClass="btn, btn-secondary"
                                        style="-fx-pref-width: 80; -fx-pref-height: 35;"/>
                            </HBox>
                        </VBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Fecha" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <DatePicker fx:id="dpEditarFecha" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Text text="Hora (HH:mm)" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                                <TextField fx:id="txtEditarHora" promptText="Ej: 14:30" prefWidth="312" style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="8">
                            <Text text="Motivo de Consulta" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextArea fx:id="txtEditarMotivo" prefRowCount="3" style="-fx-font-size: 14px;" wrapText="true"/>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Estado" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <ComboBox fx:id="cmbEditarEstado" prefWidth="640" style="-fx-pref-height: 40; -fx-font-size: 14px;">
                                <items>
                                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                                        <java.lang.String fx:value="PENDIENTE"/>
                                        <java.lang.String fx:value="CONFIRMADA"/>
                                        <java.lang.String fx:value="ATENDIDA"/>
                                        <java.lang.String fx:value="CANCELADA"/>
                                    </javafx.collections.FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>

                        <VBox spacing="8">
                            <Text text="Observaciones" styleClass="text-primary-dark" style="-fx-font-size: 14px;"/>
                            <TextArea fx:id="txtEditarObservaciones" prefRowCount="3" style="-fx-font-size: 14px;" wrapText="true"/>
                        </VBox>

                        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                            <Button text="Actualizar Cita" onAction="#handleActualizarCita"
                                    styleClass="btn, btn-warning"
                                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                            <Button text="Cancelar" onAction="#handleCancelarEdicion"
                                    styleClass="btn, btn-secondary"
                                    style="-fx-pref-width: 180; -fx-pref-height: 45;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>

    </TabPane>

</VBox>
